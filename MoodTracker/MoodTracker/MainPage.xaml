<Page
    x:Class="MoodTracker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Bottom">

    <Page.Resources>
        <SolidColorBrush x:Key="TranslucentBlackBrush" Color="Black" Opacity="0.3"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <!--Camera preview-->
        <CaptureElement Name="PreviewControl" Stretch="Uniform"/>

        <TextBox Name="Log" Background="Transparent" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Bottom" TextWrapping="Wrap" Opacity="0.3" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible" />
    </Grid>
</Page>